<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fromfinalform.tetris.presentation.MainActivity"
    android:background="#E1E1E1"
    android:id="@+id/vg_root">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vg_canvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_start"
        app:layout_constraintBottom_toTopOf="@id/vg_navigation">

        <android.opengl.GLSurfaceView
            android:id="@+id/gl_surface"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:text="Start"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/vg_canvas"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Level:"
        android:textSize="16sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/vg_canvas"
        app:layout_constraintEnd_toStartOf="@id/tv_Level_value"
        app:layout_constraintTop_toBottomOf="@id/btn_start"/>

    <TextView
        android:id="@+id/tv_Level_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:text="0"
        android:textSize="18sp"
        android:textColor="#353535"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/tv_Level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_Level"
        app:layout_constraintBottom_toBottomOf="@id/tv_Level"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Score:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/vg_canvas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_Level" />

    <TextView
        android:id="@+id/tv_score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textColor="#353535"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/vg_canvas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_score" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vg_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="@id/vg_canvas"
        app:layout_constraintEnd_toEndOf="@id/vg_canvas"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:paddingLeft="0dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/left"
            android:tint="#7B7BFF"
            android:clickable="true"
            android:background="@drawable/selector_transparent_to_primary_dark_radius"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_rotate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btn_rotate"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:padding="7dp"
            android:src="@drawable/rotate"
            android:tint="#7B7BFF"
            android:clickable="true"
            android:background="@drawable/selector_transparent_to_primary_dark_radius"
            app:layout_constraintStart_toEndOf="@id/btn_left"
            app:layout_constraintEnd_toStartOf="@id/btn_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/btn_right"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:paddingLeft="0dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/left"
            android:scaleX="-1"
            android:tint="#7B7BFF"
            android:clickable="true"
            android:background="@drawable/selector_transparent_to_primary_dark_radius"
            app:layout_constraintStart_toEndOf="@id/btn_rotate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btn_drop"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="6dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/down"
        android:tint="#7B7BFF"
        android:clickable="true"
        android:background="@drawable/selector_transparent_to_primary_dark_radius"
        app:layout_constraintStart_toEndOf="@id/vg_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>